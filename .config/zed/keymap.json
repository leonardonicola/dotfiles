[
  {
    "bindings": {
      "ctrl-left": "workspace::ActivatePaneLeft",
      "ctrl-right": "workspace::ActivatePaneRight",
      "ctrl-up": "workspace::ActivatePaneUp",
      "ctrl-down": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space g l": [
        "task::Spawn",
        { "task_name": "Lazygit", "target": "center" }
      ],
      "space space": "file_finder::Toggle",
      "shift-k": "editor::Hover",
      "space d s": "diagnostics::Deploy",
      "space f w": "pane::DeploySearch",
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePreviousItem",
      "space r": "editor::Rename",
      "ctrl-n": "project_panel::ToggleFocus",
      "n": "search::SelectNextMatch",
      "space x": "pane::CloseActiveItem",
      "ctrl-l": "project_panel::ToggleFocus",
      "ctrl-j": "terminal_panel::ToggleFocus"
    }
  },

  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "ctrl-n": "workspace::ToggleRightDock",
      "ctrl-h": "project_panel::ToggleFocus",
      "h": "project_panel::CollapseSelectedEntry",
      "l": "project_panel::ExpandSelectedEntry",
      "j": "menu::SelectNext",
      "k": "menu::SelectPrevious",
      "o": "menu::Confirm",
      "r": "project_panel::Rename",
      "z c": "project_panel::CollapseSelectedEntry",
      "z o": "project_panel::ExpandSelectedEntry",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "p": "project_panel::Paste",
      "d": "project_panel::Delete",
      "a": "project_panel::NewFile",
      "shift-a": "project_panel::NewDirectory",
      "shift-y": "workspace::CopyRelativePath",
      "g y": "workspace::CopyPath"
    }
  }
]
